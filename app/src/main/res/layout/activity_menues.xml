<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.triumphit.converter.Menues">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="version"
                    android:id="@+id/version"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/about"
                    android:layout_alignStart="@+id/about" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="About: Currency converter is an android application made by TRIUMPHIT which has the ability to show the real time currency exchange. It can also store date for offline use. Currency Converter has the greatest look and feel and you will be having an unbelievable user friendly experience."
                    android:id="@+id/about"
                    android:layout_below="@+id/version"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_alignRight="@+id/more"
                    android:layout_alignEnd="@+id/more" />

                <TextView
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Developer &amp; Contact Info:"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/about"
                    android:layout_alignLeft="@+id/more"
                    android:layout_alignStart="@+id/more" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:autoLink="email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Abir: muhaiminurabir@gmail.com"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/textView5"
                    android:layout_alignLeft="@+id/textView3" />

                <TextView
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:autoLink="email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tushar: wtushar09@gmail.com"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/textView3"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3" />

                <com.andexert.library.RippleView
                    android:id="@+id/more"
                    android:layout_width="260dp"
                    android:layout_height="45dp"
                    app:rv_centered="false"
                    app:rv_zoom="true"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp">

                    <Button
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"
                        android:layout_width="260dp"
                        android:layout_height="75dp"
                        android:text="Rate This App"
                        android:id="@+id/button"
                        android:layout_alignBottom="@+id/more"
                        android:layout_alignLeft="@+id/more"
                        android:layout_alignStart="@+id/more" />
                </com.andexert.library.RippleView>

                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Copyright \u00a9 2015, TRIUMPHIT \nPowered by TRIUMPHIT"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView4"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4" />
            </RelativeLayout>
        </ScrollView>


</RelativeLayout>
