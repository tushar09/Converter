<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.andexert.library.RippleView
                app:rv_color="@color/colorPrimary"
                android:id="@+id/more2"
                android:layout_width="200dp"
                android:layout_height="75dp"
                app:rv_centered="false"
                app:rv_zoom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/fromRipple"
                android:layout_toStartOf="@+id/fromRipple">
                <EditText
                    android:visibility="visible"
                    android:textSize="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:paddingLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:hint="From"
                    android:inputType="numberDecimal"
                    android:id="@+id/edfrom"
                    android:layout_toLeftOf="@+id/fromRipple"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />
            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:paddingRight="10dp"
                android:id="@+id/fromRipple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rv_centered="false"
                app:rv_zoom="true"
                app:rv_zoomScale="1.3"
                app:rv_color="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/from"
                    android:text="USD"/>
            </com.andexert.library.RippleView>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.andexert.library.RippleView
                app:rv_color="@color/colorPrimary"
                android:id="@+id/more3"
                android:layout_width="200dp"
                android:layout_height="75dp"
                app:rv_centered="false"
                app:rv_zoom="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/toRipple"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <EditText
                    android:visibility="visible"
                    android:textSize="50dp"
                    android:background="@drawable/rounded_edit_text"
                    android:paddingLeft="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:hint="To"
                    android:inputType="numberDecimal"
                    android:id="@+id/edto"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/toRipple"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </com.andexert.library.RippleView>
            <com.andexert.library.RippleView
                android:paddingRight="10dp"
                android:id="@+id/toRipple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rv_centered="false"
                app:rv_zoom="true"
                app:rv_zoomScale="1.3"
                app:rv_color="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:id="@+id/to"
                    android:text="USD"/>
            </com.andexert.library.RippleView>


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tvRate"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tvDate"
                    android:layout_below="@+id/tvAsk"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tvTime"
                    android:layout_below="@+id/tvRate"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tvAsk"
                    android:layout_below="@+id/tvBid"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tvBid"
                    android:layout_below="@+id/tvTime"
                    android:layout_alignParentLeft="true" />


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.79">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.andexert.library.RippleView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/more"
                android:layout_width="260dp"
                android:layout_height="45dp"
                app:rv_centered="false"
                app:rv_zoom="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <Button
                    android:visibility="visible"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Tap To Convert"
                    android:id="@+id/button"
                    android:layout_alignBottom="@+id/more"
                    android:layout_alignLeft="@+id/more"
                    android:layout_alignStart="@+id/more" />
            </com.andexert.library.RippleView>
        </RelativeLayout>
    </LinearLayout>

    <ProgressBar
        android:indeterminate="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center_horizontal" />

</LinearLayout>